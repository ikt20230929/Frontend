{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Komplex projekt feladat - Frontend",
  "main": "index.js",
  "scripts": {
    "build:esbuild": "esbuild src/js/App.jsx --bundle --minify --target=chrome58,firefox57,safari11,edge18 --jsx-import-source=preact --jsx=automatic --outfile=public/dist/bundle.js",
    "build:css": "npx tailwindcss -i ./src/css/style.css -o ./public/dist/bundle.css --minify",
    "build:docs": "cd docs && npm run build -- --out-dir=../public/docs",
    "watch:esbuild": "esbuild src/js/App.jsx --bundle --minify --target=chrome58,firefox57,safari11,edge18 --jsx-import-source=preact --jsx=automatic --outfile=public/dist/bundle.js --watch",
    "watch:css": "npx tailwindcss -i ./src/css/style.css -o ./public/dist/bundle.css --watch",
    "build": "concurrently --kill-others-on-fail npm:build:esbuild npm:build:css npm:build:docs",
    "watch": "concurrently --kill-others-on-fail npm:watch:esbuild npm:watch:css"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "daisyui": "^3.8.2",
    "esbuild": "0.19.4",
    "tailwindcss": "^3.3.3"
  },
  "dependencies": {
    "lucide-preact": "^0.284.0",
    "preact": "^10.18.0"
  }
}
